<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chuan.dao.userDao">
    <select id="getUser" resultType="com.chuan.entity.User" parameterType="String">
        select * from user where username=#{usename} and password=#{password}
    </select>
    <insert id="insertUser" parameterType="com.chuan.entity.User" >
        insert into user  {user_id,username,password,birthday,email,remark}
        value (#{user_id},#{username},#{password},#{birthday},#{email},#{remark});
    </insert>


</mapper>
